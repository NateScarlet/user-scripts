{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "types": ["@types/node"],
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "verbatimModuleSyntax": true
  },
  "include": ["*.ts", "scripts/*.ts", "src/**/*.ts"]
}
