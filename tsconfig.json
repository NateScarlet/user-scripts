{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "types": ["node"],
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["*.ts", "scripts/*.ts", "**/*.cjs"]
}
