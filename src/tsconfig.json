{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "lib": ["ESNext", "dom", "dom.iterable"],
    "types": ["@types/greasemonkey"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"]
    },
    "strictNullChecks": true,
    "verbatimModuleSyntax": true
  },
  "include": ["**/*.ts", "**/*.svelte"]
}
